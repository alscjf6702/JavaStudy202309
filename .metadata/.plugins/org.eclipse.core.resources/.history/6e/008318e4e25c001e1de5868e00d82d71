package ex01;

import java.util.ArrayList;
import java.util.List;

public class ArrayList01 {

	public static void main(String[] args) {
		
	//add(String)
		List<String> list = new ArrayList<String>();
		System.out.print("list.get(i) : ");
		list.add("Toy");
		list.add("Box");
		list.add("Robot");
		
	//for문 이용 출력
		for(int i = 0 ; i < list.size(); i++) {
			System.out.print(list.get(i) + " ");
		}
		System.out.println("");
		
	//for문 이용해서 s : list출력
		System.out.print("\nfor(String s: list) : ");
		for(String s : list) {
			System.out.print(s + " ");
		}
		System.out.println("");
		
	//remove(index)
		System.out.print("\nlist.remove(1) : ");
		list.remove(1);
		for(String s : list) {
			System.out.print(s + " ");
		}
		System.out.println("");
		
	//add(index, data)
		System.out.print("\nlist.add(1, \"Goot\") : ");
		list.add(1, "Goot");
		for(String s : list) {
			System.out.print(s + " ");
		}
		
		System.out.print(" \n================\n ");
		List list1 = new ArrayList();
		
		list1.add("gg");
		list1.add(124124);
		list1.add("goggog");
		list1.add(10.44);
		
		for(int i = 0 ; i < list1.size(); i++) {
			System.out.print(list1.get(i) + "  ");
		}
		
		
		
		
		
		
	}
	
}
