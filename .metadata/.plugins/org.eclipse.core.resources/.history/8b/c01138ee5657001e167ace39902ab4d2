		tv.channelDown();
		
		System.out.println(tv.channel);
		
		
		Tv tv2 = new Tv();
		
		System.out.println(tv2.channel);
		
		tv2.channelUp();
		tv2.channelUp();
		tv2.channelUp();

		System.out.println(tv2.channel);
		
		
		tv2.power = false;
		
		while(!tv2.power) {
			System.out.println("채널을 정하세요");
			
			Scanner scan = new Scanner(System.in);
			int a = scan.nextInt();
			
			
			
		}
		
	
	}
	
}
