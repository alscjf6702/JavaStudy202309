package ex04;

import java.util.Arrays;

public class Exam01 {

	public static void main(String[] args) {
		// 랜덤을 이용해서 5명학생 점수를 입력받는다.
		// 5명 점수의 총점과 평균을 구한다.
		// 최대값, 최소값 출력
		int[] score = new int[5];
		int sum = 0;

		for (int i = 0; i < score.length; i++) {
			score[i] = (int) (Math.random() * 100) + 1;
			sum += score[i];
			System.out.println("학생" + (i + 1) + " : " + score[i]);
		}

		System.out.println("합계 : " + sum);
		System.out.println("평균 : " + (double) sum / score.length);

		System.out.println("==============================");

		int min = score[0];
		int max = score[0];
		for (int i = 0; i < score.length; i++) {
			if (min > score[i]) {
				min = score[i];
			}
			if (max < score[i]) {
				max = score[i];
			}
		}

		System.out.println(min);
		System.out.println(max);

		// 입력 데이터를 오름 차순으로 정렬
		System.out.println("===============");
		Arrays.sort(score);
		System.out.println(Arrays.toString(score));

		System.out.println("=============");
		int[] arr3 = new int[15];
		int totalsc = 0;
		double avg = 0 ;
		for (int i = 0; i < arr3.length; i++) {
			arr3[i] = (int) (Math.random() * 120) + 1;
			System.out.println(arr3[i]);
			totalsc += arr3[i];
		}
		
		System.out.printf("총점 : %d\n" , totalsc);
		System.out.printf("평균 : %.2f\n" , (double)totalsc/arr3.length);
		
		int min2 = arr3[0];
		int max2 = arr3[0];
		for(int i = 0 ; i<arr3.length ; i++) {
			if(max2<arr3[i]) {
				max2 = arr3[i];
			}
			if(min2>arr3[i]) {
				min2 = arr3[i];
			}
		}
		System.out.printf("최소값 : %d\n" , min2);
		System.out.printf("최대값 : %d\n", max2);
		
		Arrays.sort(arr3);
		System.out.println("오름차순 정렬 : " + Arrays.toString(arr3));
				

	}

}
